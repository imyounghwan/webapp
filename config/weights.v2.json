    },
    
    "N4_1_visual_consistency": {
      "base_score": 3.5,
      "conditions": [
        {"field": "visuals.imageCount", "operator": "between", "min": 3, "max": 30, "adjustment": 1.0}
      ],
      "default_adjustment": -0.5,
      "description": "이미지 3~30개 범위가 최적"
