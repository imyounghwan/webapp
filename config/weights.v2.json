      "conditions": [
        {"field": "forms.labelRatio", "operator": ">", "value": 0.8, "adjustment": 1.5},
        {"field": "forms.labelRatio", "operator": ">", "value": 0.5, "adjustment": 0.5},
        {"field": "forms.formCount", "operator": "==", "value": 0, "adjustment": 0}
      ],
      "default_adjustment": -1.0,
      "description": "레이블 비율 80% 이상 높은 가산점, 50% 이상 중간 가산점"
